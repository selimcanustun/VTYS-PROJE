<style>
    body{ background-image: linear-gradient(#66a48d,rgb(12, 46, 12));
      font-family: Arial, Helvetica, sans-serif;}
    .container-bilgi {
        justify-items: center;
        justify-content: center;
        text-align: center;
    }
    .col-4 img{ 
        margin: 20px;
        width: 150px;}
    .col-8 {
        color: white;
        font-size: 30px;
    }
    .tradingview-widget-container{
        justify-content: center;
        justify-items: center;
        margin-left: 750px;
        
    }
</style>
<body>
    <div class="container-bilgi">
        <div class="row">
            <div class="col-12">
                    <div class="card mb-3">
                    <div class="row">
                        <div class="col-4">
                            <img src="/images/<%= coin.imageUrl %>" alt="" class="img-fluid">
                        </div>
                        <div class="col-8">
                            <div class="card-body">
                                <h5 class="card-title"><%= coin.name %> </h5>
                                <p class="card-text"><%= coin.ATH %> </p>
                                <p><%= coin.aciklama %> </p>
                                <p id = "price">**</p>   
                            </div>
                        </div>
                    </div>
                    </div>
            </div>
        </div>

    </div>
<div class="tradingview-widget-container">
    <div class="tradingview-widget-container__widget"></div>
    <div class="tradingview-widget-copyright"><a href="https://www.tradingview.com/symbols/<%= coin.coiname %>/technicals/" rel="noopener" target="_blank"><span class="blue-text"><%= coin.coiname  %></span></a></div>
    <script type="text/javascript" src="https://s3.tradingview.com/external-embedding/embed-widget-technical-analysis.js" async>
    {
    "interval": "5m",
    "width": 425,
    "isTransparent": true,
    "height": 450,
    "symbol": "<%= coin.widgetc %>",
    "showIntervalTabs": true,
    "locale": "en",
    "colorTheme": "dark"
  }
    </script>
  </div>
</body>
